<div class="depot-form">

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <fieldset>
    <legend>Please input detail info for user</legend>

    <div>
      <%= f.label :name %>:
      <%= f.text_field :name, :size => 40 %>
    </div>

    <div>
      <%= f.label :user_password, 'Password' %>:
      <%= f.password_field :password, :size => 40 %>
    </div>

    <div>
      <%= f.label :user_password_confirmation, 'Confirmation' %>:
      <%= f.password_field :password_confirmation, :size => 40 %>
    </div>

    <div>
      <%= f.submit 'Create', :class => "submit" %>
    </div>

  </fieldset>
<% end %>
</div>
